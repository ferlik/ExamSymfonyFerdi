{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>


<h1 class='text-center'>La liste des articles </h1>
<h4 class='text-center'>Espace réservé aux journaliste </h4>


<div class="row justify-content-center">


    <div class="col-10">
        <a class="btn btn-outline-danger mr-2" href="{{ path('article_new') }}">Ajouter un article</a>
        <table class="table table-striped table-dark border rounded p-4 ">
            <thead class="bg-danger">
                <td class="text-white-50">ID</td>
                <td class="text-white-50">Titre</td>
                <td class="text-white-50">Description</td>
                <td class="text-white-50">Photo</td>
                <td class="text-white-50">detail</td>
            </thead>

            <tbody>
                {% for article in articles %}
                <tr>
                    <td class="text-white">{{ article.id }}</td>
                    <td class="text-white">{{ article.titre }}</td>
                    <td class="text-white">{{ article.description }}</td>
                    <td class="text-white"><img width="300px" height="auto"
                            src="{{ asset('images/upload/' ~ article.Photo) }}"></td>

                    <td><a href="{{ path('article_detailPro', {'id' : article.id }) }}">Détail</a>
                        <a href="{{ path('article_delete', {'article' : article.id }) }}"
                            onclick="return confirm('Ton dernier mot ?')">Supprimmer</a></td>

                </tr>


                {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
                {% endfor %}


            </tbody>
        </table>
        <a class="btn btn-danger" href="{{ path('app_logout') }}">Déconnecter</a>
    </div>


</div>











{% endblock %}